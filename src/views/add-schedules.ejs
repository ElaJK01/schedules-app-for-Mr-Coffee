<%- include('../partials/main'); %>
<body>
  <%- include('../partials/header'); %>
  <section class="grid">
  <section class="terms">
    <div>
    <h4>Dodaj nowy termin</h4>
      <form method="post" action="/add-schedules">
        <label for="day">Wybierz dzień</label>
        <select id="day" name="day" id="day">
          <option value="monday">Monday</option>
          <option value="tuesday">Tuesday</option>
          <option value="wednesday">Wednesday</option>
          <option value="thursday">Thursday</option>
          <option value="friday">Friday</option>
          <option value="saturday">Saturday</option>
          <option value="sunday">Sunday</option> 
        </select>
        <label for="start_at">Początek</label>
        <input id="start_at" type="time" name="start_at">
        <label for="end_at">Koniec</label>
        <input id="end_at" type="time" name="end_at">
        <button type="submit" formaction="/add-schedules" formmethod="post">Zapisz</button>
      </form>
    </div> 
     
  </section>
  <section id="terms">
    <div>
      <h4>Twoje terminy:</h4>
      <table>
        <tr>
          <th>Dzień</th>
          <th>rozpoczęcie</th>
          <th>zakończenie</th>
        </tr>
        <% for (let i = 0; i < schedules.length; i++) { %>
        <tr>
          <td><%= schedules[i].day %></td>
          <td><%= schedules[i].start_at %></td>
          <td><%= schedules[i].end_at %></td>
        </tr>
        <% } %>
      </table>
    </div>
    
  </section>
</section>

</body>
</html>

